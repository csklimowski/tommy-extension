{
  "manifest_version": 2,
  "name": "Tommy",
  "version": "1.0",
  "description": "Tommy Nook occasionally chimes in.",

  "icons": {
    "16": "icons/tommy-16.png",
    "48": "icons/tommy-48.png",
    "128": "icons/tommy-128.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["tommy.js"],
      "run_at": "document_idle"
    }
  ]
}